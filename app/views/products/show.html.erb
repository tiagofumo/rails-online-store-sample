<div class='product-images-panel'>
  <%= image_tag @product.primary_picture.url(:medium), class: 'main-product-image' %>
  <%- @product.product_pictures.each do |p| %>
    <%= image_tag p.url(:thumb), class: 'product-thumbnail-image' %>
  <% end -%>
  <%- if @product.sparkfun_id %>
    <br>
    <span>This product belongs to
      <%= link_to 'Sparkfun', 'https://www.sparkfun.com' %></span>
  <% end -%>
</div>
<div class='product-description-panel'>
  <h3 class='product-name'><%= @product.name.capitalize %></h3>
  <span class='product-sku'><%= @product.sku %></span><br>
  <div class='product-description'><%= @product.description.html_safe %></div>
</div>
<div class='product-price-panel'>
  <h2 class='product-price'><%= number_to_currency @product.price %></h2>
  <%= render 'products/add_to_cart' %>
  <table class='product-right-table'>
    <tr>
      <td><input type='text' id='product_qty' value='1' /></td>
      <td>quantity</td>
    </tr>
    <tr><td><%= @product.stock %></td><td>in stock</td></tr>
  </table>
  <%= social_share_button_tag(@product.name) %>
  <%= link_to 'add to favorites', '#' %>
  <%= link_to 'add to wishlist', '#' %>
</div>
